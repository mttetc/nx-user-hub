{
  "name": "@nx-user-hub/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "outputPath": "dist/backend",
          "main": "backend/src/main.ts",
          "tsConfig": "backend/tsconfig.app.json",
          "assets": [
            "backend/src/assets"
          ]
        },
        "configurations": {
          "development": {
            "mode": "development"
          },
          "production": {
            "mode": "production"
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "options": {
          "buildTarget": "@nx-user-hub/backend:build"
        },
        "configurations": {
          "development": {
            "buildTarget": "@nx-user-hub/backend:build:development"
          },
          "production": {
            "buildTarget": "@nx-user-hub/backend:build:production"
          }
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "outputs": [
          "{workspaceRoot}/coverage/{projectRoot}"
        ],
        "options": {
          "jestConfig": "backend/jest.config.ts"
        }
      }
    }
  }
}
